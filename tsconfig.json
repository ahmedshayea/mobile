{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    "paths": {
      "@forum/*" : [
          "./features/forum/*"
      ],
      "@features/*": [
          "./features/*"
      ],
      "@components/*" : [
          "./components/*"
      ],
      "@search/*" : [
          "./features/search/*"
      ],
      "@/*": [ 
          "./*" 
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
